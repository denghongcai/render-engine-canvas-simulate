{
  "compilerOptions": {
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2017",
    "noImplicitAny": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "paths": {
      "*": [
          "node_modules/*",
          "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "test/*"
  ]
}
